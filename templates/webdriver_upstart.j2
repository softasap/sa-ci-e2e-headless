description "WebDriver Daemon"

start on runlevel [2345]
stop on runlevel [016]

setuid {{deploy_user}}
setgid {{deploy_user}}
console log

env PATH={{npm_path_detected}}:/usr/local/sbin:/usr/local/bin:/usr/bin:/usr/sbin:/sbin:/bin:$PATH
env NODE_BIN={{npm_path_detected}}/bin/node


exec start-stop-daemon --start --exec /usr/bin/xvfb-run -- webdriver-manager start
